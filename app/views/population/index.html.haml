%p.alert.alert-info
  - if check_approveable?(@group)
    = t('.please_confirm_census_data')

  - else
    = t('.no_census_data_requested')



= render 'people_list'


- if check_approveable?(@group)
  - if @people_data_complete
    = action_button(t('.confirm_census_data'),
                    group_member_counts_path(@group),
                    nil,
                    method: :post,
                    data: { disable_with: t('.confirm_census_data') })
  - else
    %p.alert= t('.missing_information')
